= form_for @user do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: "form-control"
  
  .form-group
    = f.label :email
    = f.text_field :email, class: "form-control"

  .form-group
    = f.label :bio
    = f.text_area :bio, class: "form-control"

  .form-group
    = f.submit "Next", class: "btn btn-success"
    - if @user.errors.any?
      - @user.errors.full_messages.each do |msg|
        .alert.alert-danger
          = msg
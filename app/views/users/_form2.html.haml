= form_for @user do |f|
  .form-group
    = f.label :city
    = f.text_field :city, class: "form-control"

  .form-group
    = f.label :state
    = f.text_field :state, class: "form-control"

  .form-group
    = f.label :zip
    = f.text_field :zip, class: "form-control"

  .form-group
    = f.submit "Next", class: "btn btn-success"
    - if @user.errors.any?
      - @user.errors.full_messages.each do |msg|
        .alert.alert-danger
          = msg
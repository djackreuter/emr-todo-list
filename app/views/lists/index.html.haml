.row
  .col-lg-12
    %h1
      All Lists
.row
  .col-lg-6
    %a{ href: "/lists/new", class: "btn btn-primary"}
      New List
    = link_to "New User", new_user_path, class: "btn btn-success"
    = link_to "View Users", users_path, class: "btn btn-dark"
    = link_to "API Request", albums_path, class: "btn btn-warning"
- @lists.each do |list|
  .card.index-card
    .row
      .col-lg-9
        = link_to list.name, list_url(list)
      .col-lg-3
        = link_to "Delete", list_path(list.id), method: :delete, data: { confirm: "Are you sure???" }, class: "btn btn-danger float-right"